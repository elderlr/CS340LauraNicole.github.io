<html>

<h3>Add new Customer:</h3>
<form id="addcust" action="/customer" method="post">
    First Name: <input type="text" name="CusFirst"><br>
    Last Name: <input type="text" name="CusLast"><br>
    Phone Number: <input type="text" name="PhoneNum"> 
        
    <input type="submit" value="Submit">
 </form>
<br/>

<h3>Search Customer:</h3>
<form id="searchcust" action="/customer" method="get">
    First Name: <input type="text" name="CusFirst"><br>
    Last Name: <input type="text" name="CusLast">
          
    <input type="submit" value="Search">
 </form>
<br/>


<h3>Our Customers:</h3>
<table>
    <thead> 
        <th>ID</th>
        <th>First Name</th> 
        <th>Last Name</th> 
        <th>Phone Number</th>
    </thead> 
    <tbody>
        {{#each customers}} 
        <tr> 
            <td>{{CustomerID}}</td>
            <td>{{CusFirst}}</td> 
            <td>{{CusLast}}</td> 
            <td>{{PhoneNum}}</td> 
            
            <td><button onclick="deleteCustomer({{CustomerID}})">Delete</button></td>
            <td><a href="/customer/{{CustomerID}}">Update</a></td>
        </tr> 
        {{/each}} 
    </tbody> 
</table> 
</html>
